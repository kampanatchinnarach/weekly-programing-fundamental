
#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<math.h>

int fac(int x) {
    if (x == 0) {
        return 1;
    }
    else {
        return x * fac(x - 1);
    }
}

int main() {
    int n;
    printf("Enter  number: ");
    scanf("%d", &n);

    printf("%d! = %d", n, fac(n));
    return 0;
}
