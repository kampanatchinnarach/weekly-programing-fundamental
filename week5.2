#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
int main() {
	int n;
	scanf("%d", &n);
		int y = 1;
	do {
		int x = 1;
		while ( x <= (2 * n) - 1)
		{
		
			if (x < y && (x + y) >= (n * 2 + 1))
			{
				printf(" ");
			}
			else if ((x > y) && (x + y) <= (n * 2) - 1) {
				printf(" ");
			}
			else
			{
				printf("*");
			}
			x += 1;
		}
		printf("\n");
		y++ ;
	} 
	while (y <= (2 * n) - 1);
	return 0;
}

